{
    "extends": "airbnb",
    "plugins": ["react"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
        "linebreak-style": 0, //* Выключили  правило "Разрывы строк"
        "max-len": ["error", { "code": 130 }],  //* Увеличение максимальный длины строки
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }], //* разрешить .js расширения для JSX.
        "indent": [2, 4, { "SwitchCase": 1, "VariableDeclarator": 1 }],
        "no-tabs": 0,
        "react/prop-types": 0,
        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4]
    }
  }